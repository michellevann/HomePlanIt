@model IEnumerable<HomePlanIt.Models.FullProjectListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table">
    <tr>
        <th>Project Name</th>
        <th>Supplies</th>
        <th>Roadblocks</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OwnerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DIYId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupplyId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoadblockId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.FullProjectId }) |
                @Html.ActionLink("Details", "Details", new { id = item.FullProjectId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.FullProjectId })
            </td>
        </tr>
    }

</table>
